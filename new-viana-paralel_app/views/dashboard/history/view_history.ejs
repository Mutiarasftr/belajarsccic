  <script>
    $(document).ready(function(){
      $('#table_face_known').DataTable();
      $('#table_face_unknown').DataTable();
      $('#table_cumulative_counting').DataTable();
    });

    $(".common").on("click",function(){
      var data_id = $(this).attr('data-id');
      if(data_id >= 10){
        data_id = data_id - 10;
      }
      var x = document.getElementsByClassName("myTAB")[data_id];
      console.log(data_id);
      if (x.style.display === "none") {
        x.style.display = "block";
      } else {
        x.style.display = "none";
      }
    });

  </script>
