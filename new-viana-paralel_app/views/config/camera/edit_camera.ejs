<div class="tab-pane fade show active" id="edit-camera" role="tabpanel" aria-labelledby="profile-tab">
    <div class="card shadow mb-4 mt-2">
        <div class="card-body">
            <form action="/configuration/camera/<%= camera.id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="name">Site</label>
                    <select name="siteId" class="form-control">
                        <option value="<%= camera.siteId.id %>">--- <%= camera.siteId.name %> ---</option>
                        <% for(let i=0; i<site.length; i++){ %>
                            <option value="<%= site[i].id %>"><%= site[i].name %></option>
                        <% } %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" name="name" value="<%= camera.name %>" placeholder="Enter camera name">
                </div>
                <div class="form-group">
                    <label for="name">Brand</label>
                    <input type="text" class="form-control" name="brand" value="<%= camera.brand %>" placeholder="Enter brand name">
                </div>
                <div class="form-group">
                    <label for="nama">Status</label>
                    <select name="status" class="form-control">
                        <option value="active">--- Active ---</option>
                        <option value="inactive">--- Inactive ---</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="name">Latitude</label>
                    <input type="text" class="form-control" name="latitude" value="<%= camera.location.latitude %>" placeholder="Enter latitude">
                </div>
                <div class="form-group">
                    <label for="name">Longitude</label>
                    <input type="text" class="form-control" name="longitude" value="<%= camera.location.longitude %>" placeholder="Enter longitude">
                </div>
                <div class="form-group">
                    <label for="name">Protocol</label>
                    <input type="text" class="form-control" name="protocol" value="<%= camera.protocol %>" placeholder="Enter protocol type">
                </div>
                <div class="form-group">
                    <label for="name">IP Adress</label>
                    <input type="text" class="form-control" name="ip" value="<%= camera.ip %>" placeholder="Enter IP camera">
                </div>
                <div class="form-group">
                    <label for="name">Address</label>
                    <input type="text" class="form-control" name="address" value="<%= camera.address %>" placeholder="Enter address">
                </div>

                <button type="submit" class="btn btn-primary">Save</button>
              </form>
        </div>
      </div>
</div>