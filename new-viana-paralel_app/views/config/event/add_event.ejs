<div class="tab-pane fade" id="add-event" role="tabpanel" aria-labelledby="profile-tab">
    <div class="card shadow mb-4 mt-2">
        <div class="card-body">
            <form action="/configuration/event" method="POST">
                <div class="form-group">
                    <label for="analytic">Analytic</label>
                    <select name="analyticId" class="form-control">
                        <option value="">--- Analytic ---</option>
                        <% for(let i=0; i<analytic.length; i++){ %>
                            <option value="<%= analytic[i].id %>"><%= analytic[i].name %></option>
                        <% } %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="site">Site</label>
                    <select id="siteId" name="siteId" class="form-control">
                        <option value="">--- Site ---</option>
                        <% for(let i=0; i<site.length; i++){ %>
                            <option value="<%= site[i].id %>"><%= site[i].name %></option>
                        <% } %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="camera">Camera</label>
                    <select id="cameraId" name="cameraId" class="form-control">
                        <option>--- Camera ---</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="nama">Status</label>
                    <select name="status" class="form-control">
                        <option value="1">--- Active ---</option>
                        <option value="0">--- Inactive ---</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="name">Description</label>
                    <input type="text" class="form-control" name="description" placeholder="Enter description">
                </div>
                <div class="form-group">
                    <label for="name">Port</label>
                    <input type="text" class="form-control" name="port" placeholder="Enter port">
                </div>

                <button type="submit" class="btn btn-primary">Add</button>
              </form>
        </div>
      </div>
</div>