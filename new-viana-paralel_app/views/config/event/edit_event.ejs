<div class="tab-pane fade show active" id="edit-event" role="tabpanel" aria-labelledby="profile-tab">
    <div class="card shadow mb-4 mt-2">
        <div class="card-body">
            <form action="/configuration/event/<%= event.id %>?_method=PUT"" method="POST">
                <div class="form-group">
                    <label for="analytic">Analytic</label>
                    <select name="analyticId" class="form-control">
                        <option value="<%= event.analyticId.id %>">--- <%= event.analyticId.name %> ---</option>
                        <% for(let i=0; i<analytic.length; i++){ %>
                            <option value="<%= analytic[i].id %>"><%= analytic[i].name %></option>
                        <% } %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="site">Site</label>
                    <select id="siteId" name="siteId" class="form-control">
                        <option value="<%= O_site._id %>">--- <%= O_site.name %> ---</option>
                        <% for(let i=0; i<site.length; i++){ %>
                            <option value="<%= site[i].id %>"><%= site[i].name %></option>
                        <% } %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="camera">Camera</label>
                    <select id="cameraId" name="cameraId" class="form-control">
                        <option value="<%= event.cameraId.id %>">--- <%= event.cameraId.name %> ---</option>
                        <% for(let i=0; i<camera.length; i++){ %>
                            <option value="<%= camera[i].id %>"><%= camera[i].name %></option>
                        <% } %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="nama">Status</label>
                    <select name="status" class="form-control">
                        <option value="1">--- Active ---</option>
                        <option value="0">--- Inactive ---</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="name">Description</label>
                    <input type="text" class="form-control" name="description" value="<%= event.description %>"  placeholder="Enter description">
                </div>
                <div class="form-group">
                    <label for="name">Port</label>
                    <input type="text" class="form-control" name="port" value="<%= event.port %>" placeholder="Enter port">
                </div>

                <button type="submit" class="btn btn-primary">save</button>
              </form>
        </div>
      </div>
</div>